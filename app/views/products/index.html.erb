<% if current_user.admin %>
<h4><%= link_to "+ Create New Product", new_product_path %></h4>
<% end %>
<h1>Our Tasty Treats:</h1>
<br>
<% if @products.any? %>
  <% @products.each do |product| %>
    <p><%= link_to product.name, product_path(product) %></p>
  <% end %>
<% else %>
<p>There are no products yet.</p>
<% end %>
